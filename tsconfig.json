{
	"compilerOptions": {
		"esModuleInterop": true,
		"skipLibCheck": true,
		"target": "ESNext",
		"allowJs": true,
		"resolveJsonModule": true,
		"moduleDetection": "force",
		"isolatedModules": true,
		"outDir": "./dist",
		"rootDir": "./src",
		"strict": true,
		"noUncheckedIndexedAccess": true,
		"moduleResolution": "Bundler",
		"module": "ESNext",
		"noEmit": true,
		"lib": ["ESNext"]
	},
	"include": ["src/**/*.ts"],
	"exclude": ["node_modules"]
}
